<!-- <div class="col-xs-12 col-sm-6 col-md-8"> -->
  <div class="container-fluid">
    <div class="container">
    <% if notice %>
      <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= notice %>
      </div>
    <% end %>
    <% if alert %>
      <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= alert %>
      </div>
    <% end %>
</div>
  <div class="row">
    <div class="col-xs-4">
      <div class="panel panel-border panel-success">
        <div class="panel-heading">
          <h3 class="panel-title">ADD A ADMIN</h3>
        </div>
        <div class="panel-body">
          
        <p>
          <%= simple_form_for @user, url: {:action => "addsuperadmin",  :method => "post"} do |f| %>
          <div class="row">
            <div class="col-md-6">
              <%= f.input :fname, :required => true, :placeholder => "First Name", :autofocus => true, :label => false, :input_html => { :class => "form-control addweb"} %>
            </div>
          <div class="col-md-6">
            <%= f.input :lname, :required => true, :placeholder => "Last Name", :label => false, :input_html => { :class => "form-control addweb"} %>
          </div>
        </div>
            <%= f.input :email, :required => true, :placeholder => "Email", :label => "Email", :input_html => { :class => "form-control addweb"} %><br>
            <%= f.submit "SIGNUP", :class => "btn btn-info" %>
          <% end %>
        </p>
      </div>
    </div>
  </div>
  <div class="col-xs-4">
      <div class="panel panel-border panel-success">
        <div class="panel-heading">
          <h3 class="panel-title">DELETE ADMIN</h3>
        </div>
        <div class="panel-body">
    
        <p>
          <table class="table table-bordered">
            <tr>
              <th>name</th>
              <th>email</th>
              <th></th>
            </tr>
           <% @users.each do |u| %>
            <% if u.email != "khalidhmhd@gmail.com" && u.email != "apsbtetworld@gmail.com" %>
              <tr>
              <td><%= u.fname %> <%= u.lname %></td>
              <td><%= u.email %></td>
              <td><a href="/admin/<%= u.id %>/delete"><button class="btn btn-danger">Delete</button></a></td>
            </tr>
            <% end %>
            <% end %>
          </table>
        </p>
      </div>
    </div>
  </div>
</div>

</div>
</div>
